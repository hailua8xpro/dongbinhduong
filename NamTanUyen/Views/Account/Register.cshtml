@model NamTanUyen.ViewModels.RegisterViewModel
@section css{

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/global.css" rel="stylesheet" />
    <link href="~/Content/reponsive.css" rel="stylesheet" />
    <link href="~/Content/menu.dev.css" rel="stylesheet" />
    <link href="~/Content/account.dev.css" rel="stylesheet" />

}
@section js{

    <script src="~/Scripts/jquery-2.0.0.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/common.js"></script>
    <script src="~/Scripts/global.js"></script>
    <script src="~/Scripts/account.dev.js"></script>
}


<div class="container-fluid acc-wrap">
    <div class="mx-5">
        <div class="row">
            <div class="col-12 py-3">
                <h1 class="h3">Đăng ký tài khoản</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-12 py-3">
                <div class="bb"><h6>Thông tin cá nhân</h6></div>
            </div>

        </div>
        <form id="frm-register" class="row">
            <p class="cpsuccess">Đăng ký thành công, bạn đã có thể <a href="/dang-nhap">đăng nhập</a></p>
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-6">
                        <label for="FullName" class="required">Họ tên <span>*</span></label>
                        <input type="text" name="FullName" required id="FullName" value="" />
                    </div>
                    <div class="col-md-6">
                        <label for="Email" class="required">Email <span>*</span></label>
                        <input type="email" name="Email" required id="Email" value="" />
                    </div>
                    <div class="col-md-12">
                        <label for="Address" class="required">Địa chỉ <span>*</span></label>
                        <textarea name="Address" required id="Address"></textarea>
                    </div>
                </div>
            </div>
            <div class="col-12 py-3">
                <div class="bb"> <h6>Thông tin đăng nhập</h6></div>
            </div>
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-6">
                        <label for="Password" class="required">Mật khẩu <span>*</span></label>
                        <input type="password" name="Password" required id="Password" value="" />
                    </div>
                    <div class="col-md-6">
                        <label for="ConfirmPassword" class="required">Xác nhận mật khẩu <span>*</span></label>
                        <input type="password" name="ConfirmPassword" required id="ConfirmPassword" value="" />
                    </div>
                </div>
            </div>
            <div class="col-12 my-4">
                <button class="button">Đăng ký</button>
            </div>
        </form>
    </div>
</div>

