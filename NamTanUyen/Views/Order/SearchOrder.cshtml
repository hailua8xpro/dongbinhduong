<div class="container-fluid w-myaccount">
    <div class="breadcrumb pl-0">
        <a class="green" href="/" title="Return to Home">Trang chủ &nbsp;</a>

        <span class="fa fa-angle-right">&nbsp;</span>
        <span class="navigation_page">
            Tài khoản
        </span>
    </div>
    <div class="row mt-3">
        <div class="col-md-6">
            <h3>Đăng nhập</h3>
            <form id="frmorderlogin">
                <div class="row">
                    <div class="col-md-2">Email</div>
                    <div class="col-md-10">
                        <input type="email" class="mb-3" required name="Email" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">Mật khẩu</div>
                    <div class="col-md-10">
                        <input type="password" name="Phone" class="mb-3" required />
                    </div>
                </div>
                <div class="row">
                    <div class="col-2">
                       
                    </div>
                    <div class="col-10">
                        <label for="IsRemember">
                            <input type="checkbox" name="IsRemember" id="IsRemember" value="" />
                            Ghi nhớ đăng nhập
                        </label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-10">
                        <button>Đăng nhập</button>
                        <p><a href="/quen-mat-khau">Quên mật khẩu</a></p>
                    </div>
                </div>
            </form>
            <form id="frm-searchorder" action="don-hang">
                <div class="row">
                    <div class="col-md-2">Email</div>
                    <div class="col-md-10">
                        <input type="email" name="Email" class="mb-3" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">Mã đơn hàng</div>
                    <div class="col-md-10">
                        <input type="text" name="ordercode" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-10">
                        <button>Tìm đơn hàng</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>



