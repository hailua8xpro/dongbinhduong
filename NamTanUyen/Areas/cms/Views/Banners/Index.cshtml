@model IEnumerable<NamTanUyen.Models.Banner>

@{
    ViewBag.Title = "Banner";
}

<h2>Banner</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Caption)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Url)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Caption)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Url)
        </td>
        <td>
            <img src="@item.ImageUrl" width="150" alt="" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id=item.BannerId }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.BannerId })
        </td>
    </tr>
}

</table>
