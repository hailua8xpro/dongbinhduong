@model IEnumerable<Mango.ViewModels.OrderItem>
@section css{

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/global.css" rel="stylesheet" />
    <link href="~/Content/reponsive.css" rel="stylesheet" />
    <link href="~/Content/menu.dev.css" rel="stylesheet" />
    <link href="~/Content/account.dev.css" rel="stylesheet" />

}
@section js{

    <script src="~/Scripts/jquery-2.0.0.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/common.js"></script>
    <script src="~/Scripts/global.js"></script>
<script src="~/Scripts/order.dev.js"></script>
}
<div class="container-fluid order-list">
    <div class="breadcrumb pl-0">
        <a class="green" href="/" title="Return to Home">Trang chủ &nbsp;</a>

        <span class="fa fa-angle-right">&nbsp;</span>
        <span class="navigation_page">
            Đơn hàng
        </span>
    </div>
    <div class="row">
        <div class="col-12">
            @if (Model != null && Model.Any())
            {
                <table class="table table-hover table-responsive">
                    <thead>
                        <tr>
                            <th>Tên khách hàng</th>
                            <th>Tổng số lượng</th>
                            <th>Tổng tiền</th>
                            <th>Mã đơn hàng</th>
                            <th>Ngày đặt hàng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="orderid" data-orderid="@item.OrderID">
                                <td>@item.FullName</td>
                                <td>@item.TotalQuantity</td>
                                <td>@item.TotalAmount</td>
                                <td>@item.OrderCode</td>
                                <td>@String.Format("{0:dd/MM/yyyy}", item.CreatedDate.Value)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>Danh sách đơn hàng rỗng,<a href="/">Về trang chủ</a></p>
            }
        </div>
    </div>
</div>