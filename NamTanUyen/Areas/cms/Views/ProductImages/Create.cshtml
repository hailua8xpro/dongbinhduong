@model NamTanUyen.Models.ProductImage

@{
    ViewBag.Title = "Bộ sưu tập hình ảnh sản phẩm";
}

<h2>Thêm mới</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Bộ sưu tập hình ảnh sản phẩm</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <input type="hidden" name="ProductId" id="ProductId" value="@ViewBag.ProductId" />

        <div class="form-group">
            <label for="ImageFiles" class="control-label col-md-4">Chọn nhiều hình ảnh (640 x 408)</label>
            <div class="col-md-10">
                <input type="file" multiple name="ImageFiles" class="form-control" value="" />
            </div>
        </div>
        @*<div class="form-group">
            @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.IsActive)
                    @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>*@

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cập nhật" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Danh sách", "Index",new { productId = ViewBag.ProductId})
</div>
@section js{
    <script>
        $('form').submit(function (e) {
            e.preventDefault();
            var url = $('form').attr('action');
            var data = new FormData(this);
            var formname = 'form';
            addModelWithImage(url, data, formname);
        })
    </script>
}