@model IEnumerable<NamTanUyen.Models.Collection>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CollectionName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageUrl)
        </th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CollectionName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td>
            <img src="@item.ImageUrl" width="100" alt="" />
        </td>
        <td>@Html.ActionLink("Sản phẩm","Index", "CollectionDetails",new { collectionId =item.CollectionId},null)</td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CollectionId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CollectionId })
        </td>
    </tr>
}

</table>
