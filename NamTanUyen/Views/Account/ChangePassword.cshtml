@model NamTanUyen.ViewModels.UpdatePassViewModel
@section css{

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/global.css" rel="stylesheet" />
    <link href="~/Content/reponsive.css" rel="stylesheet" />
    <link href="~/Content/menu.dev.css" rel="stylesheet" />
    <link href="~/Content/account.dev.css" rel="stylesheet" />

}
@section js{

    <script src="~/Scripts/jquery-2.0.0.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/common.js"></script>
    <script src="~/Scripts/global.js"></script>
    <script src="~/Scripts/account.dev.js"></script>
}

<div class="container-fluid w-myaccount">
    <div class="breadcrumb pl-0">
        <a class="green" href="/" title="Return to Home">Trang chủ &nbsp;</a>

        <span class="fa fa-angle-right">&nbsp;</span>
        <span class="navigation_page">
            Đổi mật khẩu
        </span>
    </div>
    <div class="row mt-3">
        <div class="col-12 col-md-2 d-none d-md-block">
            <h3>Tài khoản</h3>
            <ul>
                <li><a href="/doi-mat-khau" style="color:#000">Đổi mật khẩu</a></li>
                <li><a href="/wishlist">Yêu thích</a></li>
                <li><a href="/don-hang">Đơn hàng</a></li>
                <li><a href="/tai-khoan">Thông tin</a></li>
            </ul>
        </div>
        <div class="col-12 col-md-6">
            <form id="frm-changepass">
               
                <div class="row">
                    <div class="col-md-2">Mật khẩu cũ</div>
                    <div class="col-md-10">
                        <input type="password" required name="CurrentPass" id="CurrentPass"  />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">Mật khẩu mới</div>
                    <div class="col-md-10">
                        <input type="password" name="NewsPass" id="NewsPass" required/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">Xác nhận mật khẩu mới</div>
                    <div class="col-md-10">
                        <input type="password" name="NewPassConfirm" id="NewPassConfirm" required />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-10">
                        <button>Đổi mật khẩu</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>