@model NamTanUyen.ViewModels.MyAccountViewModel
@section css{

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/global.css" rel="stylesheet" />
    <link href="~/Content/reponsive.css" rel="stylesheet" />
    <link href="~/Content/menu.dev.css" rel="stylesheet" />
    <link href="~/Content/account.dev.css" rel="stylesheet" />

}
@section js{

    <script src="~/Scripts/jquery-2.0.0.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/common.js"></script>
    <script src="~/Scripts/global.js"></script>
    <script src="~/Scripts/account.dev.js"></script>
}
<div class="container-fluid w-myaccount">
    <div class="breadcrumb pl-0">
        <a class="green" href="/" title="Return to Home">Trang chủ &nbsp;</a>

        <span class="fa fa-angle-right">&nbsp;</span>
        <span class="navigation_page">
            Tài khoản
        </span>
    </div>
    <div class="row mt-3">
        <div class="d-none d-md-block col-md-2">
            <h3>Tài khoản</h3>
            <ul>
                <li><a href="/doi-mat-khau">Đổi mật khẩu</a></li>
                <li><a href="/wishlist">Yêu thích</a></li>
                <li><a href="/don-hang">Đơn hàng</a></li>
                <li><a href="/tai-khoan" style="color:#000">Thông tin</a></li>
            </ul>
        </div>
        <div class="col-md-6">
            <form id="frmuserinfo">
                <input type="hidden" name="UserID" value="@Model.UserId" />
                <div class="row">
                    <div class="col-md-2">Giới tính</div>
                    <div class="col-md-10">
                        <select name="Gender">
                            <option @(Model.Gender == 1 ? "selected" : string.Empty) value="0">Nam</option>
                            <option @(Model.Gender == 0 ? "selected" : string.Empty) value="1">Nữ</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">Họ tên</div>
                    <div class="col-md-10">
                        <input type="text" required name="FullName" value="@Model.FullName" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">Điện thoại</div>
                    <div class="col-md-10">
                        <input type="text" name="Phone" required value="@Model.Phone" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">Địa chỉ</div>
                    <div class="col-md-10">
                        <textarea name="Address" required value="@Model.Address">@Model.Address</textarea>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-10">
                        <button>Cập nhật</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>



