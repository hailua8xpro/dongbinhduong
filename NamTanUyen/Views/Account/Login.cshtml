@model NamTanUyen.ViewModels.LoginViewModel
@section css{

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/global.css" rel="stylesheet" />
    <link href="~/Content/reponsive.css" rel="stylesheet" />
    <link href="~/Content/menu.dev.css" rel="stylesheet" />
<link href="~/Content/account.dev.css" rel="stylesheet" />

}
@section js{

    <script src="~/Scripts/jquery-2.0.0.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
    <script src="~/Scripts/bootstrap.js"></script>
<script src="~/Scripts/common.js"></script>
    <script src="~/Scripts/global.js"></script>
<script src="~/Scripts/account.dev.js"></script>
}
<div class="container-fluid acc-wrap">
    <div class="row">
        <div class="col-12 py-3">
            <h1 class="h3">Đăng nhập hoặc đăng ký tài khoản</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="bb text-uppercase py-2">
                <h6>Đăng ký mới</h6>
            </div>
            <div class="bb py-2">
                Đăng ký tại website để chúng tôi có thể phục vụ và hỗ trợ bạn tốt hơn
            </div>
            <div class="my-3">
                <a href="/dang-ky" class="button">Đăng Ký</a>
            </div>
        </div>
        <div class="col-md-6">
            <div class="bb text-uppercase py-2">
                <h6>Đăng nhập</h6>
            </div>
            <div class="pt-2">
                Nếu bạn đã có tài khoản mời bạn đăng nhập
            </div>
            <form id="frm-login" class="mt-3">
                <div>
                    <label for="Email" class="required">Địa chỉ email <span>*</span></label>
                    <input type="email" name="Email" id="Email" placeholder="Email" value="" />
                </div>
                <div>
                    <label for="Password" class="required">Mật khẩu <span>*</span></label>
                    <input type="password" name="Password" id="Password" placeholder="Mật khẩu" value="" />
                </div>
                <label for="IsRemember">
                    @Html.CheckBoxFor(model => model.IsRemember)
                    Ghi nhớ đăng nhập
                </label>
                <div class="bt py-3">
                    <div class="row">
                        <div class="col-md-6">
                            <button class="button">Đăng nhập</button>
                        </div>
                        <div class="col-md-6">
                            <a href="/quen-mat-khau" class="maincolor">Quên mật khẩu ?</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
